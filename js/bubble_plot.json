{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Rating of Airbnbs in Greater Melbourne (2023)",
  "width": 800,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/hbar0009/fit3179-week10-homework/main/data/listings_with_ratings.csv"
  },
  "transform": [
    { "filter": "datum.price < 2500 && datum.price > 0" },
    { "filter": "datum.rating > 3" },
    {
      "filter": "neighbourhood_selection == null || datum.neighbourhood == neighbourhood_selection"
    },
    { "filter": "datum.number_of_reviews > num_reviews_above" }
  ],
  "params": [
    {
      "name": "room_type_highlight",
      "select": { "type": "point", "fields": ["room_type"] },
      "bind": "legend"
    },
    {
      "name": "num_reviews_above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 1000,
        "name": "Minimum Number of Reviews"
      }
    },
    {
      "name": "neighbourhood_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Banyule",
          "Bayside",
          "Boroondara",
          "Brimbank",
          "Cardinia",
          "Casey",
          "Darebin",
          "Frankston",
          "Glen Eira",
          "Greater Dandenong",
          "Hobsons Bay",
          "Hume",
          "Kingston",
          "Knox",
          "Manningham",
          "Maribyrnong",
          "Maroondah",
          "Melbourne",
          "Melton",
          "Monash",
          "Moonee Valley",
          "Moreland",
          "Nillumbik",
          "Port Phillip",
          "Stonnington",
          "Whitehorse",
          "Whittlesea",
          "Wyndham",
          "Yarra",
          "Yarra Ranges"
        ],
        "labels": [
          "Show All",
          "Banyule",
          "Bayside",
          "Boroondara",
          "Brimbank",
          "Cardinia",
          "Casey",
          "Darebin",
          "Frankston",
          "Glen Eira",
          "Greater Dandenong",
          "Hobsons Bay",
          "Hume",
          "Kingston",
          "Knox",
          "Manningham",
          "Maribyrnong",
          "Maroondah",
          "Melbourne",
          "Melton",
          "Monash",
          "Moonee Valley",
          "Moreland",
          "Nillumbik",
          "Port Phillip",
          "Stonnington",
          "Whitehorse",
          "Whittlesea",
          "Wyndham",
          "Yarra",
          "Yarra Ranges"
        ],
        "name": "Area Selection: "
      },
      "value": "Monash"
    }
  ],
  "mark": "circle",
  "encoding": {
    "x": {
      "field": "price",
      "title": "Price per Night (AUD)",
      "type": "quantitative",
      "scale": { "type": "log" }
    },
    "y": {
      "field": "rating",
      "type": "quantitative",
      "title": "Rating (out of 5 stars)",
      "scale": { "domain": [3, 5] }
    },
    "size": {
      "field": "number_of_reviews",
      "type": "quantitative",
      "title": "Number of Reviews",
      "scale": {
        "type": "threshold",
        "domain": [5, 10, 50, 100, 200, 400],
        "range": [20, 50, 100, 150, 200, 300, 400]
      }
    },
    "color": {
      "field": "room_type",
      "type": "nominal",
      "title": "Room Type",
      "scale": {
        "domain": [
          "Entire home/apt",
          "Hotel room",
          "Private room",
          "Shared room"
        ],
        "range": ["#8a6fdf", "#a8e10c", "#ff5765", "#ffdb15"]
      }
    },
    "opacity": {
      "condition": { "param": "room_type_highlight", "value": 0.6 },
      "value": 0.2
    },
    "tooltip": [
      { "field": "name", "title": "Name", "type": "nominal" },
      { "field": "room_type", "title": "Room Type", "type": "nominal" },
      {
        "field": "price",
        "title": "Price per Night (AUD)",
        "type": "quantitative"
      },
      {
        "field": "rating",
        "title": "Rating (out of 5 Stars)",
        "type": "quantitative"
      },
      {
        "field": "number_of_reviews",
        "title": "Number of Reviews",
        "type": "quantitative"
      },
      {
        "field": "neighbourhood",
        "title": "Local Council Area",
        "type": "nominal"
      }
    ]
  }
}
